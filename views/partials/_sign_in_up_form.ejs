<div id="opaque">
  <div class="form-popup" id="sign-in-form">
    <form action="/login" method="POST" class="form-container">
      <i class="fa-solid fa-xmark fa-xl"></i>
      <h1>HELLO!</h1>
      <p>Sign in with your email here.</p>
      <input type="email" placeholder="Email" name="email" required>
      <input type="password" placeholder="Password" name="password" required>
      <p id="register-link-text">Don't have an account? <a class="sign-up-link"
          href="#">Sign up</a></p>
      <button type="submit" class="btn">Sign in</button>
    </form>
  </div>

  <div class="form-popup" id="sign-up-form">
    <form action="/register" method="POST" class="form-container">
      <i class="fa-solid fa-xmark fa-xl"></i>
      <h1>HELLO!</h1>
      <p>Sign up to create a library of your favourite colour combinations.</p>
      
        <input type="email" placeholder="Email" name="email" required>
      
        <input type="password" placeholder="Password" name="password" required>
        <p id="sign-in-link-text">Already have an account? <a class="sign-in-link"
          href="#">Sign in</a></p>
      <button type="submit" class="btn">Sign up</button>
    </form>
  </div>

</div>