<div id="opaque">
  <div class="form-popup" id="sign-in-form">
    <form action="/login" method="POST" class="form-container">
      <i class="fa-solid fa-xmark fa-xl"></i>
      <h1>HELLO!</h1>
      <p>Sign in below with your email.</p>
      <div><label for="email"><b>Email</b></label>
        <input type="text" placeholder="Enter your email" name="email" required>
      </div>
      <div><label for="password"><b>Password</b></label>
        <input type="password" placeholder="*********" name="password" required>
      </div>
      <p id="register-link-text">If you do not have an account, please register <a class="generic-link"
        href="#sign-up-form">here.</a></p>
      <button type="submit" class="btn">Sign in</button>
