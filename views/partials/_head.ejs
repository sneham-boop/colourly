  <title>
    Colour Database
  </title>
</head>

<body>
  <header>
    <nav>
      <a href="/colours">Colours</a>
      <div>
        <!-- Login/Register -->
        <% if(!user){ %>
          <span class="sign-in-link">Sign in</span>
          <span class="sign-up-button">Sign up</span>
          <% } else { %>
            <form id="logout-form" method="POST" action="/logout">
              <span>Signed in as: <%=user.email %>
              </span>
              <button type="submit" class="btn btn-outline-dark" formmethod="POST" formaction="/logout">Sign out</button>
            </form>
            <% } %>
              <i id="collapsible-menu-icon" class="fa-solid fa-bars fa-lg"></i>
      </div>
    </nav>
    <ul class="menu">
      <% if(user===null){ %>
        <li id="menu-sign-in" class="menu-item">Sign in</li>
        <li id="menu-sign-up" class="menu-item">Sign up</li>
        <% } else { %>
          <li id="menu-my-combinations" class="menu-item"><a href="/colours/<%=user.id%>">My combinations</a></li>
          <li id="menu-new-palette" class="menu-item"><a href="/colours/palette">Save your favourites</a></li>
          <li id="menu-sign-out" class="menu-item">Sign out</li>
          <% } %>
    </ul>
  </header>